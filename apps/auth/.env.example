# Auth Server Configuration
PORT=4000
NODE_ENV=development
HOST=local

# Database
DATABASE_URL=postgresql://user:password@localhost:5434/auth_db?schema=public

# Better Auth Configuration
BETTER_AUTH_URL=http://localhost:4000
BETTER_AUTH_SECRET=your-better-auth-secret-key-here

# JWT Keys (Generate with: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout -out public.pem)
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYour public key here\n-----END PUBLIC KEY-----"

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001